<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="./myscripts.js"></script>
    <link rel="stylesheet" href="./styles.css">
    <title>Document</title>
  </head>
  <body>
    <form id="Scouting Form" method="POST" action="/submit">

      <div id="page1">
        <h1>General</h1>

        <label for="Match">Match Number:</label>
        <br>
        <input type="text" id="Match" name="match">
        <br>

        <label for="Team">Team:</label>
        <br>
        <select name="Teams" id="Team">
          <option value="Red1">Red 1</option>
          <option value="Red2">Red 2</option>
          <option value="Red3">Red 3</option>
          <option value="Blue1">Blue 1</option>
          <option value="Blue2">Blue 2</option>
          <option value="Blue3">Blue 3</option>
        </select>
        <br>

        <label for="ScouterName">Scouter's Name:</label>
        <br>
        <input type="text" id="ScouterName" name="name">
        <br>

        <button type="button" onclick="nextPage()">Next</button>
      </div>


      <div id="page2" style="display:none;">
        <h2>Autonomus</h2>
        <label for="address">cone:</label>
        <div> 
          <button type="button" onclick="decrement('AutonomusConeHigh')">-</button>
          <input type="text" id="AutonomusConeHigh" value="0" readonly>
          <button type="button" onclick="increment('AutonomusConeHigh')">+</button>
        </div>
        <div>
          <button type="button" onclick="decrement('AutonomusConeMid')">-</button>
          <input type="text" id="AutonomusConeMid" value="0" readonly>
          <button type="button" onclick="increment('AutonomusConeMid')">+</button>
        </div>
        <div>
          <button type="button" onclick="decrement('AutonomusConeHybrid')">-</button>
          <input type="text" id="AutonomusConeHybrid" value="0" readonly>
          <button type="button" onclick="increment('AutonomusConeHybrid')">+</button>
        </div>

        <label for="address">cube:</label>
        <div> 
          <button type="button" onclick="decrement('AutonomusCubeHigh')">-</button>
          <input type="text" id="AutonomusCubeHigh" value="0" readonly>
          <button type="button" onclick="increment('AutonomusCubeHigh')">+</button>
        </div>
        <div>
          <button type="button" onclick="decrement('AutonomusCubeMid')">-</button>
          <input type="text" id="AutonomusCubeMid" value="0" readonly>
          <button type="button" onclick="increment('AutonomusCubeMid')">+</button>
        </div>
        <div>
          <button type="button" onclick="decrement('AutonomusCubeHybrid')">-</button>
          <input type="text" id="AutonomusCubeHybrid" value="0" readonly>
          <button type="button" onclick="increment('AutonomusCubeHybrid')">+</button>
        </div>
        <br>
        <label for="LeftCommunity">Left COMMUNITY Zone?</label>
        <input type="checkbox" name="LeftCommunity" value="Car">
        <br>
        <label for="AuroCharge">Team:</label>
        <br>
        <select name="AuroCharge" id="Team">
          <option value="Red1">charge</option>
          <option value="Red2">Atempted</option>
          <option value="Red3">Didnt atempt</option>
        </select>
        <br>
        <button type="button" onclick="prevPage()">Previous</button>
        <button type="button" onclick="nextPage()">Next</button>
      </div>
      <div id="page3" style="display:none;">
        <label for="age">Age:</label>
        <input type="number" id="age" name="age">
        <br>
        <button type="button" onclick="prevPage()">Previous</button>
        <button type="button" onclick="nextPage()">Next</button> 
      </div>
      <div id="page4" style="display:none;">
        <label for="interests">Interests:</label>
        <input type="text" id="interests" name="interests">
        <br>
        <button type="button" onclick="prevPage()">Previous</button>
        <button type="submit">Submit</button>
      </div>
    
  </body>
</html>